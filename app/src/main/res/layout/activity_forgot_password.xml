<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".LoginPage.ForgotPasswordActivity"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:src="@drawable/back_btn"
            android:layout_gravity="start"
            android:background="@color/grey"
            android:contentDescription="@string/back_button"

            />
        <View
            android:id="@+id/logoForAppli"
            android:layout_width="70dp"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:layout_marginStart="40sp"
            android:background="@drawable/logo_for_app_bg" />

        <TextView
            android:id="@+id/appNameInLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cooper"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/app_name"
            android:textAppearance="@style/AppTheme"
            android:textColor="@color/grey_app_name"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cooper"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:textAppearance="@style/AppTheme"
            android:textColor="@color/grey_app_name"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="@string/enter_password"
            android:textAppearance="@style/AppTheme"
            android:textColor="@color/grey_app_name"
            android:textSize="20sp"

            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="350sp"
        android:layout_marginEnd="10sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="20sp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="horizontal"
            android:padding="10sp">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="48sp"
                android:minWidth="280sp"
                android:autofillHints="emailAddress"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding="16sp"
                android:hint="@string/your_email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                android:textSize="18sp"
                tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:contentDescription="@string/eyeButton" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100sp"
            android:fontFamily="@font/cooper"
            android:gravity="center"
            android:letterSpacing="0.12"
            android:paddingStart="50sp"
            android:paddingEnd="50sp"
            android:text="@string/continueButton"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</RelativeLayout>