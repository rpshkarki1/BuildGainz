<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".LoginPage.ForgotPasswordActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarForgetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/cooper"
                    android:gravity="center_vertical"
                    android:text="@string/forgot_password"
                    android:textColor="@color/white"
                    android:textSize="35sp" />


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        >

        <View
            android:id="@+id/logoForAppli"
            android:layout_width="70dp"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:background="@drawable/logo_for_app_bg" />

        <TextView
            android:id="@+id/appNameInLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cooper"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/app_name"
            android:textAppearance="@style/AppTheme"
            android:textColor="@color/grey_app_name"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="@string/enter_password"
            android:textAppearance="@style/AppTheme"
            android:textColor="@color/grey_app_name"
            android:textSize="20sp"

            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="10sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="20sp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10sp">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="48sp"
                android:autofillHints="emailAddress"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding="16sp"
                android:hint="@string/your_email"
                android:inputType="textEmailAddress"
                android:minWidth="280sp"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                android:textSize="18sp"
                tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:contentDescription="@string/eyeButton" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:fontFamily="@font/cooper"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        android:text="@string/continueButton"
        android:textSize="35sp"

        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />


</LinearLayout>