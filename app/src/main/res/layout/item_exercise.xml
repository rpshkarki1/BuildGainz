<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/dark_grey"
        app:cardCornerRadius="20sp"
        app:cardElevation="10sp"
        app:cardUseCompatPadding="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200sp"
            android:orientation="vertical"
            android:background="@color/grey"
            android:padding="10sp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp">

                <ImageView
                    android:id="@+id/exerciseImageView"
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5sp"
                    android:background="@color/select_white"
                    android:contentDescription="@string/exercise_image"
                    android:scaleType="centerCrop"
                    tools:ignore="ImageContrastCheck" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5sp">


                    <TextView
                        android:id="@+id/force"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:textSize="15sp"
                        android:text="@string/force"
                        android:textColor="#7ce6f7"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text="@string/level"
                        android:textColor="#3fa1f5"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/equipment"
                        android:layout_width="match_parent"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="true"
                        android:padding="5sp"
                        android:text="@string/equipment"
                        android:textColor="#4cbc9c"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/primeMuscle"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5sp"
                        android:paddingTop="5sp"
                        android:text="@string/primary_muscle"

                        android:textColor="#cab28c"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cooper"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="35sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>