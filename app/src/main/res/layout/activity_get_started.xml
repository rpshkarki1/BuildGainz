<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SplashScreens.GetStartedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/black_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoForApp"
            android:layout_width="105sp"
            android:layout_height="105sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:contentDescription="@string/logoFor_App"
            app:srcCompat="@drawable/logo_for_app_bg" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/cooper"
            android:letterSpacing="0.05"
            android:text="@string/app_name"
            android:textColor="#929698"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/motto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/moto"
            android:fontFamily="@font/cooper"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/motto"
            android:textColor="@color/white"
            android:textSize="30sp"
             />


        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/cooper"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:padding="10sp"
            android:text="@string/get_Started"
            android:textSize="30sp"
            android:textStyle="bold"

            />

    </LinearLayout>


</RelativeLayout>